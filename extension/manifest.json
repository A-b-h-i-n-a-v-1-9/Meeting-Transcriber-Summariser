{
  "manifest_version": 3,
  "name": "Meeting AI Recorder",
  "version": "1.0",
  "description": "Records meeting audio, transcribes, and summarizes it.",
  "permissions": ["activeTab", "storage", "scripting", "tabCapture", "downloads"],
  "optional_permissions": ["microphone"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["favicon.ico"],
      "matches": ["<all_urls>"]
    }
  ]
}